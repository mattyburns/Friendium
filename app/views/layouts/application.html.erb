<!DOCTYPE html>
<html>
  <head>
    <title>Friendium</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>

    <div class="sign_in_bar">
      <ul id="sign_in_ul">
      <% if current_user  %>
        <li class="link"> <%= link_to "Logout", logout_path %></li>
      <% else %>
        <li class="link"><%= link_to "Sign in with Google", "/auth/google" %></li>
      <% end %>
      </ul>
    </div>

    <%= yield %>

  </body>
</html>
