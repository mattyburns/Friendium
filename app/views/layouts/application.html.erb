<!DOCTYPE html>
<html>
  <head>
    <title>Friendium</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user  %>
    <%= link_to "Logout", logout_path %>
    <% else %>
    <%= link_to "Sign in with Google", "/auth/google" %>
    <% end %>
    <div id="app"/>
    <%= javascript_pack_tag 'application' %>
    <%= yield %>
  </body>
</html>
